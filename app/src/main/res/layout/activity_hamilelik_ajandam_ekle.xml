<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeHamilelikAjandamEkle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".HamilelikAjandamEkle">

    <LinearLayout
        android:id="@+id/linearLayoutHamilelikAjandamEkler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarHamilelikAjandamEkle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:contentDescription="Ana sayfa araç çubuğu"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" >
            <ImageButton
                android:id="@+id/button_geri_HamilelikAjandam"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="s"
                android:src="@drawable/ic_back_arrow" />

            <!-- TextView ekleyerek kendi metnini belirle -->
            <TextView
                android:id="@+id/toolbar_title_HamilelikAjandamEkle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Not Ekle"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="20dp" />
        </androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonTarih"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="4"
                android:backgroundTint="@color/dangerous"
                android:onClick="showContent"
                android:text="Tarih" />

            <Button
                android:id="@+id/buttonSaat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="2"
                android:backgroundTint="@color/undangerous"
                android:onClick="showContent"
                android:text="Saat"
                android:textColor="@color/undangerousText" />

        </LinearLayout>

        <EditText
            android:id="@+id/gunlukNote"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="20dp"
            android:background="@color/background"
            android:padding="10dp"
            android:text=".......">

        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonBackHamilelik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="İptal" />

            <Button
                android:id="@+id/buttonEkleDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ekle" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>