<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/buttomsheetdesign"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewNotEKle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/rubikbold"
        android:text="Not Ekle"
        android:textAlignment="center"
        android:textColor="@color/darkerPink"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonTarihAjandam"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/darkerPink"
            android:fontFamily="@font/rubikbold"
            android:onClick="showContent"
            android:text="Bugün"
            android:textColor="@color/background" />

        <Button
            android:id="@+id/buttonSaatAjandam"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/mediumPink"
            android:fontFamily="@font/rubikbold"
            android:onClick="showContent"
            android:text="Şimdi"
            android:textColor="@color/darkerPink" />

    </LinearLayout>

    <EditText
        android:id="@+id/gunlukNote"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:background="@color/background"
        android:fontFamily="@font/rubikregular"
        android:hint="0/102"
        android:padding="10dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/characterCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/rubikbold"
        android:text="0/102"
        android:textAlignment="textEnd"
        android:textColor="@color/darkerPink"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonBackHamilelik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/lightGrey"
            android:fontFamily="@font/rubikbold"
            android:text="İptal"
            android:textColor="@color/darkBlue" />

        <Button
            android:id="@+id/buttonEkleDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/darkBlue"
            android:fontFamily="@font/rubikbold"
            android:text="Ekle"
            android:textColor="@color/background" />
    </LinearLayout>

</LinearLayout>
