<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/buttomsheetdesign">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Yeni Tekme Ekle"
        android:fontFamily="@font/rubikregular"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/kilobefore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"

            android:layout_weight="1"
            android:background="@drawable/buttomsheetdesign"
            android:hint="0"
            android:fontFamily="@font/rubikregular"
            android:textAlignment="center"
            android:textColor="@color/darkerPink"
            android:textSize="72sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/kilovirgül"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:text=","
            android:fontFamily="@font/rubikregular"
            android:textAlignment="center"
            android:textColor="@color/darkerPink"
            android:textSize="72sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/kiloafter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/buttomsheetdesign"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:hint="0"
            android:fontFamily="@font/rubikregular"
            android:textAlignment="center"
            android:textColor="@color/darkerPink"
            android:textSize="72sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonTarihKilo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="2"
            android:backgroundTint="@color/dangerous"
            android:onClick="showContent"
            android:text="Bugün"
            android:fontFamily="@font/rubikregular" />

        <Button
            android:id="@+id/buttonSaatKilo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="2"
            android:backgroundTint="@color/undangerous"
            android:onClick="showContent"
            android:text="Şimdi"
            android:fontFamily="@font/rubikregular"
            android:textColor="@color/undangerousText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonKiloiptal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/lightGrey"
            android:text="İptal"
            android:fontFamily="@font/rubikregular"
            android:textColor="@color/background"
            android:background="@drawable/buttoncorner"/>


        <Button
            android:id="@+id/buttonKiloEklesheet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/darkerPink"
            android:text="Ekle"
            android:fontFamily="@font/rubikregular"
            android:textColor="@color/background"
            android:background="@drawable/buttoncorner" />

    </LinearLayout>


</LinearLayout>